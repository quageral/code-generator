{
  "name": "acm-template-pro-generator",
  "description": "ACM 示例模板生成器",
  "basePackage": "com.code",
  "version": "1.0",
  "author": "ctc",
  "createTime": "2024-1-23",
  "fileConfig": {
    "inputRootPath": ".source/acm-template-pro",
    "outputRootPath": "generated",
    "sourceRootPath": "/Users/frank/IdeaProjects/code-generator/code-generator-demo-projects/acm-template-pro",
    "type": "dir",
    "files": [
      {
        "inputPath": "src/com/code/acm/MainTemplate.java.ftl",
        "outputPath": "src/com/code/acm/MainTemplate.java",
        "type": "file",
        "generateType": "dynamic"
      },
      {
        "groupKey": "git",
        "groupName": "开源",
        "type": "group",
        "condition": "needGit",
        "files": [
          {
            "inputPath": ".gitignore",
            "outputPath": ".gitignore",
            "type": "file",
            "generateType": "static",
            "condition": "needGit"
          },
          {
            "inputPath": "README.md",
            "outputPath": "README.md",
            "type": "file",
            "generateType": "static"
          }
        ]
      }
    ]
  },
  "modelConfig": {
    "models": [
      {
        "fieldName": "needGit",
        "type": "boolean",
        "description": "是否生成 .gitignore 文件",
        "defaultValue": true,
        "abbr": "g"
      },
      {
        "fieldName": "loop",
        "type": "boolean",
        "description": "是否生成循环",
        "defaultValue": true,
        "abbr": "l"
      },
      {
        "groupKey": "mainTemplate",
        "groupName": "核心模板",
        "type": "MainTemplate",
        "description": "用以生成核心模板文件",
        "condition": "loop",
        "models": [
          {
            "fieldName": "author",
            "type": "String",
            "description": "作者注释",
            "defaultValue": "ctc",
            "abbr": "a"
          },
          {
            "fieldName": "outputText",
            "type": "String",
            "description": "输出信息",
            "defaultValue": "sum = ",
            "abbr": "o"
          }
        ]
      }
    ]
  }
}
